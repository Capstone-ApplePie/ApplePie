<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lpi_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_insert_photo_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lpi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="사용자 이름"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/lpi_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lpi_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="백엔드 개발자"
            app:layout_constraintStart_toStartOf="@+id/lpi_name"
            app:layout_constraintTop_toBottomOf="@+id/lpi_name" />

        <TextView
            android:id="@+id/lpi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자 상세내용"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/lpi_tag"
            app:layout_constraintTop_toBottomOf="@+id/lpi_tag" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>