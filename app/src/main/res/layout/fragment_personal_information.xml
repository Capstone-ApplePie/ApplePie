<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalInformation">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="ID-34693469"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView"></TextView>

                <Button
                    android:id="@+id/userLogOut"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="316dp"
                    tools:layout_editor_absoluteY="76dp" />

                <Button
                    android:id="@+id/btn_deleteAccount"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원탈퇴"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="316dp"
                    tools:layout_editor_absoluteY="28dp" />

                <Button
                    android:id="@+id/btn_modify_profile"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 수정"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="223dp"
                    tools:layout_editor_absoluteY="76dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="외주"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="과외/과제"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="공모전"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 팀"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_team"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        tools:listitem="@layout/layout_my_team"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 글"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_board"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        tools:listitem="@layout/layout_my_board"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동 이력"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp">
                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recruit"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        tools:listitem="@layout/layout_recruit_item">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>
</LinearLayout>